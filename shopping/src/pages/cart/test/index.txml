  <bottom-sheet 
    title="Địa chỉ nhận hàng" 
    buttonTitle="OK" 
    distanceFromTop="{{100}}" 
    disableScroll
    onClose="hideBottomSheet">
    <view class="pt-x-small px-small flex flex-col">
      <scroll-view class="flex-1" scroll-y>
        <view 
          class="item flex items-center justify-between" 
          onTap="onSelect"
          data-item="{{item}}"
          tiki:for="{{address}}">
          <text class="font-bold">{{item.name}}</text>
        </view>
      </scroll-view>
    </view>
  </bottom-sheet>

