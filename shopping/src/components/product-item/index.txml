<view class="product">
  <image
    resize-mode="contain"
    style="width: {{imageWidth}}px" 
    src="{{product.thumbnail_url}}" />
  <view onTap="onGoToProductPage">
    <text number-of-lines="{{3}}">{{product.name}}</text>
  </view>
  <view class="price-container">
    <price price="{{product.price}}" />
    <button 
      onTap="onAddCart"
      class="add" 
      type="secondary">
      <icon color="#1A94FF" type="plus" />
    </button>
  </view>
</view>
