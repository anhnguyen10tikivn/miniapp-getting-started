.container {
  min-height: 100%;
  background-color: var(--gray20);
  padding: 16px;
}

.block {
  background-color: white;
  margin: 8px 0;
  padding: 16px;
  border-radius: var(--border-radius-rounded-4px);
}

.nodes {
  white-space: pre-wrap;
}

/* Rich Text */
.rt-container {
  display: flex;
  flex-direction: column;
}

.rt-container .rt-image {
  margin: 0 auto;
}

.even {
  background-color: var(--gray20);
}

.col {
  padding: 4px;
  font-size: 12px;
}
